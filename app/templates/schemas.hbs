<div class="row">
  <div class="col-xs-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        Schemas
        <div class="pull-right">
          <a {{action "import"}}>Export</a> | 
          <a {{action "export"}}>Import</a>
        </div>
      </div>
      <ul class="list-group">
        {{#each model as |schema|}}
          {{link-to schema.title "schemas.schema" schema.id class="list-group-item"}}
        {{/each}}
      </ul>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">Add New Schema</div>
      <div class="panel-body">
        <form>
          <div class="form-group">
            <label>Handle</label>
            {{input value=newSchemaHandle class="form-control"}}
          </div>
          <div class="form-group">
            <label>Title</label>
            {{input value=newSchemaTitle class="form-control"}}
          </div>
          <div class="form-group">
            <button {{action "createSchema" newSchemaHandle newSchemaTitle}} class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="col-xs-10">
    {{outlet}}
  </div>
</div>

